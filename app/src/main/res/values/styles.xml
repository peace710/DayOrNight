<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppDayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemViewTextColor">@color/textColor</item>
        <item name="itemViewBackground">@color/colorLightWhite</item>
        <item name="checkTextColor">@color/textColor</item>
        <item name="layoutBackground">@color/colorWhite</item>
        <item name="labelTextColor">@color/colorAccent</item>
        <item name="valueTextColor">@color/textColor</item>
    </style>

    <style name="AppNightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="itemViewTextColor">@color/textColorNight</item>
        <item name="itemViewBackground">@color/colorLightBlue</item>
        <item name="checkTextColor">@color/textColorNight</item>
        <item name="layoutBackground">@color/colorDrakBlue</item>
        <item name="labelTextColor">@color/colorAccentNight</item>
        <item name="valueTextColor">@color/textColorNight</item>
    </style>


</resources>
