<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="?attr/layoutBackground"
    android:id="@+id/layout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeviceId："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/device_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VersionCode："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/version_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VersionName："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/version_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机品牌："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone_brand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机型号："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone_model_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Level："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone_api_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Version："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone_api_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Process Id："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/app_process_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Name："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/app_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meta-data："
            android:textColor="?attr/labelTextColor"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/meta_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/valueTextColor"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>